<%= render partial: "users/usernav" %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="field">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :phone %><br />
        <%= f.phone_field :phone, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.phone_field :address, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :bio %><br />
        <%= f.text_area :bio, class: "form-control" %>
      </div>

      <%= f.hidden_field :is_host %>

      <br>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-success" %>
      </div>
  <% end %>
  <hr>
  <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

  <hr>

  <%= link_to "Back", :back %>

</div>
